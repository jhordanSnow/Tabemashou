@model IEnumerable<WebApplication.Models.Dish>

<div class="box box-solid box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Menú</h3>
        <div class="box-tools pull-right">
            <a href="@Url.Action("Create", "Dishes")" class="btn btn-box-tool" ><i class="fa fa-plus"></i></a>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->
    <div class="box-body">
        <div style="overflow-y: auto; max-height: 666px ">
            @foreach (var item in Model)
            {
                <div class="box box-primary collapsed-box">
                    <div class="box-header with-border">
                        <h3 class="box-title">@item.Name</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                        </div><!-- /.box-tools -->
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        @item.Description
                        
                            <div class="btn-group pull-right">
                                <a class="btn btn-xs btn-primary" href="">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger" data-toggle="modal" data-target="#modalDelete" data-restaurantname="" data-restaurantid="9">
                                    <i class="fa fa-trash"></i>
                                </a>
                                <a class="btn btn-xs btn-warning" href="">
                                    <i class="fa fa-eye"></i>
                                </a>

                        </div><!-- /.box -->
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
                

            }    
        </div>
    </div>
 </div>